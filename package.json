{
  "name": "deploy-cloud-functions",
  "version": "2.1.0",
  "description": "Deploy a Cloud Function",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build -m src/main.ts",
    "docs": "node ./bin/docs.mjs",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write **/*.ts",
    "test": "node --require ts-node/register --test-reporter spec --test tests/client.test.ts tests/secret.test.ts tests/util.test.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add dist/"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/google-github-actions/deploy-cloud-functions"
  },
  "keywords": [
    "actions",
    "gcf",
    "functions",
    "google cloud",
    "cloud function"
  ],
  "author": "Google LLC",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/http-client": "^2.2.1",
    "@google-github-actions/actions-utils": "^0.7.6",
    "archiver": "^7.0.1",
    "google-auth-library": "^9.10.0",
    "ignore": "^5.3.1"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "@vercel/ncc": "^0.38.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint": "^8.57.0",
    "node-stream-zip": "^1.15.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
