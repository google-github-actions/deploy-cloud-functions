{
  "name": "deploy-cloud-functions",
  "version": "0.6.0",
  "description": "Deploy a Cloud Function",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "fixlint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write **/*.ts",
    "test": "mocha -r ts-node/register -t 600s 'tests/*.test.ts'",
    "e2e-tests": "mocha -r ts-node/register -t 120s 'tests/e2e/e2e.test.ts'",
    "cleanup": "mocha -r ts-node/register -t 240s 'tests/cleaner/cleanTestFunctions.test.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add dist/"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/google-github-actions/deploy-cloud-functions"
  },
  "keywords": [
    "actions",
    "gcf",
    "functions",
    "google cloud",
    "cloud function"
  ],
  "author": "Google LLC",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@types/archiver": "^5.1.0",
    "archiver": "^5.0.0",
    "fast-glob": "^3.2.5",
    "fs": "0.0.1-security",
    "gaxios": "^4.3.0",
    "google-auth-library": "^6.0.6",
    "googleapis": "^58.0.0",
    "ignore": "^5.1.8",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.20",
    "@types/lodash": "^4.14.171",
    "@types/mocha": "^8.0.1",
    "@types/node": "^16.0.0",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.8.0",
    "@vercel/ncc": "^0.24.1",
    "chai": "^4.2.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^9.0.2",
    "node-stream-zip": "^1.13.4",
    "prettier": "^2.0.5",
    "ts-node": "^10.0.0",
    "typescript": "^3.9.7"
  }
}
